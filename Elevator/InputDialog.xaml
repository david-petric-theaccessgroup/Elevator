<Window x:Class="Elevator.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="120" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblQuestion" Grid.Row="0" Foreground="{DynamicResource ForegroundBrush}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="txtAnswer" Width="100" Margin="0,0,10,0" 
                     Background="{DynamicResource DataGridRowBrush}"
                     Foreground="{DynamicResource ForegroundBrush}"
                     BorderBrush="{DynamicResource DataGridBorderBrush}"/>
            <Button x:Name="btnDialogOk" Content="OK" Width="50" Click="btnDialogOk_Click"/>
        </StackPanel>
    </Grid>
</Window>
