<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="BackgroundBrush" Color="#f0f0f0" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="#333333" />
    <SolidColorBrush x:Key="TitleForegroundBrush" Color="DarkGreen" />
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#e0e0e0" />
    <SolidColorBrush x:Key="DataGridBorderBrush" Color="#DDD" />
    <SolidColorBrush x:Key="DataGridRowBrush" Color="White" />
    <SolidColorBrush x:Key="DataGridAltRowBrush" Color="#F5F5F5" />
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#DDDDDD" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#CCCCCC" />
    <SolidColorBrush x:Key="StatusSuccessBrush" Color="MediumOrchid" />
    <SolidColorBrush x:Key="StatusErrorBrush" Color="Red" />
</ResourceDictionary>